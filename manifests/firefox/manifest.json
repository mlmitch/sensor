{
    "browser_specific_settings": {
        "gecko": {
            "id": "sensor@weaklayer.com",
            "strict_min_version": "57.0"
        }
    },
    "name": "Weaklayer Sensor",
    "author": "Weaklayer",
    "version": "0.0.3",
    "description": "Browser Detection and Response",
    "manifest_version": 2,
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "incognito": "spanning",
    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "js": [
                "browser-polyfill.min.js",
                "content.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start",
            "match_about_blank": true,
            "all_frames": true
        }
    ],
    "permissions": [
        "storage",
        "<all_urls>"
    ]
}